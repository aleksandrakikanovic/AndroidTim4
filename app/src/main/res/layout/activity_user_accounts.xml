<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountsActivity">


    <ListView
        android:id="@+id/view_user_accounts"
        android:layout_width="304dp"
        android:layout_height="381dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/addAccount"
        android:layout_width="158dp"
        android:layout_height="56dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="116dp"
        android:text="Button"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/view_user_accounts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/view_user_accounts"
        app:layout_constraintTop_toBottomOf="@+id/view_user_accounts"
        app:layout_constraintVertical_bias="0.309" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="105dp"
        android:text="Choose an account to use"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/view_user_accounts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>